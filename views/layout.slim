  script src="/bootstrap/js/bootstrap.min.js"
  javascript:
    (function() { 
      $("#help").popover({
        placement: "left"
      });

      $("#searchinput").focus();
      $("#searchinput").typeahead({
        source: function(query, process) {
          return $.get("/lemma/autocomplete.json", {
            term: query
          }, function(data) {
            return process(data);
          });
        }
      });
    }).call(this);


